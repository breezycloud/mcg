@code {
    [Parameter]
    public string ContentType { get; set; }
}

@if (ContentType?.StartsWith("image/") == true)
{
    <!-- Image file icon -->
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
        <rect x="4" y="2" width="16" height="20" rx="2" fill="#FFE0B2"/>
        <circle cx="9" cy="9" r="2" fill="#FFB300"/>
        <path d="M7 18L13 12L17 16V18H7Z" fill="#FFB300"/>
    </svg>
}
else if (ContentType == "application/pdf")
{
    <!-- PDF file icon -->
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
        <rect x="4" y="2" width="16" height="20" rx="2" fill="#FFCDD2"/>
        <text x="8" y="16" font-size="8" fill="#D32F2F">PDF</text>
    </svg>
}
else if (ContentType == "text/plain")
{
    <!-- Text file icon -->
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
        <rect x="4" y="2" width="16" height="20" rx="2" fill="#BBDEFB"/>
        <rect x="7" y="8" width="10" height="2" rx="1" fill="#1976D2"/>
        <rect x="7" y="12" width="7" height="2" rx="1" fill="#1976D2"/>
    </svg>
}
else
{
    <!-- Default file icon -->
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
        <rect x="4" y="2" width="16" height="20" rx="2" fill="#E0E0E0"/>
        <path d="M8 2V6C8 7.10457 8.89543 8 10 8H16" stroke="#757575" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M16 2V8" stroke="#757575" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <rect x="7" y="12" width="10" height="2" rx="1" fill="#BDBDBD"/>
        <rect x="7" y="16" width="7" height="2" rx="1" fill="#BDBDBD"/>
    </svg>
}