@page "/users"
@inject IUserService UserService
@inject IMaintenanceService SiteService
@attribute [Authorize(Roles = "Admin, Master")]
<PageTitle>Users</PageTitle>


<section class="bg-gray-50 dark:bg-gray-900 rounded-lg">
   @if (DataMode)
   {
     <div class="px-4 lg:px-12">
        <div class="bg-white dark:bg-gray-800 relative shadow-md sm:rounded-lg overflow-hidden">
              <!-- Header with search and add button -->
            <div class="flex flex-col items-center justify-between p-4 space-y-3 md:flex-row md:space-y-0 md:space-x-4">
                <div class="w-full flex-auto">
                    <label for="truck-search" class="sr-only">Search requests</label>
                        <div class="relative w-full">
                            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <input 
                                type="text" 
                                id="truck-search" 
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" 
                                placeholder="Search users..." 
                                @bind-value="@request.SearchTerm" @bind-value:event="oninput" @onkeyup="async () => await HandleSearch(request.SearchTerm!)" />
                        </div>
                </div>
                <div class="flex flex-col items-stretch justify-end flex-shrink-0 w-full space-y-2 md:w-auto md:flex-row md:space-y-0 md:items-center md:space-x-3">
                    <button 
                        @onclick="AddUser" 
                        type="button" 
                        class="flex items-center justify-center text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
                        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                            <path clip-rule="evenodd" fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" />
                        </svg>
                        Add User
                    </button>                    
                </div>
            </div>

            <!-- Table -->
            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-100 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3">First Name</th>
                            <th scope="col" class="px-6 py-3">Last Name</th>
                            <th scope="col" class="px-6 py-3">Email</th>
                            <th scope="col" class="px-6 py-3">Phone No</th>
                            <th scope="col" class="px-6 py-3">Role</th>
                            <th scope="col" class="px-6 py-3">Active</th>
                            <th scope="col" class="px-6 py-3">Verified</th>
                            <th scope="col" class="px-6 py-3">Created</th>
                            <th scope="col" class="px-6 py-3">Updated</th>
                            <th scope="col" class="px-6 py-3 text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (response != null && response.Data!.Any())
                        {
                            foreach (var user in response.Data!)
                            {
                                <tr class="border-b dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                                    <td class="px-6 py-4">@user.FirstName</td>
                                    <td class="px-6 py-4">@user.LastName</td>
                                    <td class="px-6 py-4">@user.Email</td>
                                    <td class="px-6 py-4">@user.PhoneNo</td>
                                    <td class="px-6 py-4">@user.Role</td>
                                    <td class="px-6 py-4">
                                        @(user.IsActive ? "Yes" : "No")
                                    </td>
                                    <td class="px-6 py-4">
                                        @(user.IsVerified.HasValue ? (user.IsVerified.Value ? "Yes" : "No") : "N/A")
                                    </td>
                                    <td class="px-6 py-4">@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td class="px-6 py-4">@(user.UpdatedAt?.ToString("MMM dd, yyyy") ?? "Never")</td>
                                    <td class="px-6 py-4 text-right">
                                        <div class="flex justify-end space-x-3">
                                            <button 
                                                @onclick="() => EditUser(user)" 
                                                class="font-medium text-blue-600 dark:text-blue-400 hover:underline">
                                                Edit
                                            </button>
                                            <button 
                                                @onclick="() => OnView(user)" 
                                                class="font-medium text-gray-600 dark:text-gray-400 hover:underline">
                                                View
                                            </button>
                                            @* <button 
                                                @onclick="() => DeleteUser(user.Id)" 
                                                class="font-medium text-red-600 dark:text-red-500 hover:underline">
                                                Delete
                                            </button> *@
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="10" class="px-6 py-4 text-center text-gray-500 dark:text-gray-400">
                                    @if (AppState.IsBusy)
                                    {
                                        <div class="flex justify-center items-center">
                                            <svg class="animate-spin -ml-1 mr-3 h-4 w-4 text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                            </svg>
                                            Loading users...
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="flex flex-col items-center justify-center py-6">
                                            <svg class="w-8 h-8 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                            <span class="text-lg font-medium">No users found</span>
                                            <p class="text-sm text-gray-500 mt-1">Try adjusting your search or add a new user</p>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="p-4 border-t border-gray-200 dark:border-gray-700">
                <Pagination             
                    CurrentPage="request.Page + 1"
                    PageSize="request.PageSize"
                    TotalItems="response?.Total ?? 0"
                    OnPageChanged="async (page) => { 
                        request.Page = page - 1; 
                        await LoadUsers(); 
                        StateHasChanged(); 
                    }" />
            </div>
        </div>
    </div>
   }
    @if (EntryMode)
    {
        <UserEntry 
            CurrentUser="selectedUser" 
            EditMode=EditMode
            Sites="@Sites"
            OnCancel="CancelEntry" 
            OnSubmit="HandleSave" />
    }

    @if (ViewMode)
    {
        <ViewUser 
            User="selectedUser" 
            OnBack="CancelView" 
            />
    }
</section>


@code {
    private GridDataResponse<User>? response = null;
    private GridDataRequest request = new();
    private User? selectedUser = null;

    private bool EntryMode, EditMode, ViewMode  = false;

    private bool DataMode = true;
    private MaintenanceSite[]? Sites = [];

    protected override async Task OnInitializedAsync()
    {
        request = new GridDataRequest { Page = 0, PageSize = 10};
        await LoadUsers();
        Sites = await SiteService.GetAsync(AppState.GetCancellationToken());
    }

    private async Task HandleSearch(string search)
    {
        if (string.IsNullOrWhiteSpace(search))
        {
            request.SearchTerm = string.Empty;
        }
        else
            request.SearchTerm = search;
        request.Page = 0; // Reset to first page when searching
        await LoadUsers();
    }
    
    private async Task LoadUsers()
    {
        AppState.IsBusy = true;
        try 
        {
            response = await UserService.GetPagedAsync(request, AppState.GetCancellationToken());
        }
        finally
        {
            AppState.IsBusy = false;
        }
        StateHasChanged();
    }

    private void AddUser()
    {
        ViewMode = false;
        DataMode = false;
        EntryMode = true;
        EditMode = false;
        selectedUser = new();
        StateHasChanged();
    }

    private void EditUser(User user)
    {
        ViewMode = false;
        DataMode = false;
        EntryMode = true;
        EditMode = true;
        selectedUser = user;
        StateHasChanged();
    }

    private void OnView(User user)
    {
        DataMode = EntryMode = EditMode = false;
        selectedUser = user;
        ViewMode = true;
        StateHasChanged();
    }

    private async Task HandleSave(User user)
    {        
        bool result = false;
        try
        {            

            if (!EditMode)
            {
                result = await UserService.AddAsync(user, AppState.GetCancellationToken());
            }
            else
            {
                result = await UserService.UpdateAsync(user, AppState.GetCancellationToken());
            }

            if (result)
                ToastService.ShowSuccess($"User successfully {(EditMode ? "updated" : "added")}", 5);
        }
        catch (Exception ex)
        {
            ToastService.ShowError("error occurred");
        }
        finally
        {
            if (result)
            {
                EntryMode = false;
                EditMode = false;
                selectedUser = null;
                if (result)
                {
                    DataMode = true;
                    await LoadUsers();
                }
            }
            
        }        
    }

    private void CancelView()
    {
        DataMode = true;
        ViewMode = false;
        EntryMode = false;
        selectedUser = null;

    }
    private void CancelEntry()
    {
        DataMode = true;
        EntryMode = false;
        EditMode = !EditMode;
        selectedUser = null;
    }

    private async Task DeleteUser(Guid id)
    {
        await UserService.DeleteAsync(id, AppState.GetCancellationToken());
        response = await UserService.GetPagedAsync(request, AppState.GetCancellationToken());
    }
}