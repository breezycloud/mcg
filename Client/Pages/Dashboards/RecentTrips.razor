@inject IDashboardService DashboardService

<div class="bg-white p-6 rounded-lg shadow">
    <h3 class="text-lg font-semibold mb-4">Recent Trips</h3>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Truck</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Duration</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var trip in recentTrips)
                {
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap">@trip.TruckNumber</td>
                        <td class="px-6 py-4 whitespace-nowrap">@trip.Product</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="@GetStatusBadgeClass(trip.Status)">
                                @trip.Status
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">@(trip.TripDurationDays?.ToString() ?? "N/A") days</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private List<RecentTripDto> recentTrips = new();

    protected override async Task OnInitializedAsync()
    {
        recentTrips = await DashboardService.GetRecentTripsAsync(5);
    }

    private string GetStatusBadgeClass(TripStatus status)
    {
        return status switch
        {
            TripStatus.Active => "px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800",
            TripStatus.Closed => "px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800",
            _ => "px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800"
        };
    }
}