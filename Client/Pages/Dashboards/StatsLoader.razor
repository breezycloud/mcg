<style>
    .skeleton {
        background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
        background-size: 400% 100%;
        animation: shimmer 1.5s infinite linear;
        border-radius: 0.75rem;
    }    

    .skeleton-text {
        height: 1rem;
        margin-bottom: 0.5rem;
        border-radius: 0.375rem;
    }

    .skeleton-circle {
        border-radius: 50%;
        width: 1.5rem;
        height: 1.5rem;
        display: inline-block;
    }    
</style>

<!-- Stats Cards Skeleton -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <!-- Card 1 -->
    <div class="skeleton-card">
        <div class="skeleton w-40 h-6 skeleton-text"></div>
        <div class="skeleton w-32 h-10 mt-2 rounded"></div>
        <div class="skeleton w-24 h-4 mt-2 rounded"></div>
    </div>

    <!-- Card 2 -->
    <div class="skeleton-card">
        <div class="skeleton w-40 h-6 skeleton-text"></div>
        <div class="skeleton w-32 h-10 mt-2 rounded"></div>
        <div class="skeleton w-36 h-4 mt-2 rounded"></div>
    </div>

    <!-- Card 3 -->
    <div class="skeleton-card">
        <div class="skeleton w-40 h-6 skeleton-text"></div>
        <div class="skeleton w-32 h-10 mt-2 rounded"></div>
        <div class="skeleton w-28 h-4 mt-2 rounded"></div>
    </div>
</div>

<!-- Charts Skeleton -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    <!-- Bar Chart Skeleton -->
    <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow">
        <div class="skeleton w-48 h-6 mb-4 rounded"></div>
        <div class="skeleton w-full h-64 rounded"></div>
    </div>

    <!-- Pie Chart Skeleton -->
    <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow">
        <div class="skeleton w-48 h-6 mb-4 rounded"></div>
        <div class="skeleton w-full h-64 rounded"></div>
    </div>
</div>

<!-- Active Investments Skeleton -->
<div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow mb-8">
    <div class="skeleton w-48 h-6 mb-4 rounded"></div>
    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left">
            <thead class="text-xs uppercase bg-gray-50 dark:bg-gray-700 text-gray-700 dark:text-gray-300">
                <tr>
                    <th class="px-6 py-3"><div class="skeleton w-20 h-4 rounded"></div></th>
                    <th class="px-6 py-3"><div class="skeleton w-20 h-4 rounded"></div></th>
                    <th class="px-6 py-3"><div class="skeleton w-20 h-4 rounded"></div></th>
                    <th class="px-6 py-3"><div class="skeleton w-20 h-4 rounded"></div></th>
                    <th class="px-6 py-3"><div class="skeleton w-20 h-4 rounded"></div></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < 3; i++)
                {
                    <tr class="skeleton-table-row">
                        <td class="skeleton-table-cell"><div class="skeleton w-32 h-5 rounded"></div></td>
                        <td class="skeleton-table-cell"><div class="skeleton w-24 h-5 rounded"></div></td>
                        <td class="skeleton-table-cell"><div class="skeleton w-28 h-5 rounded"></div></td>
                        <td class="skeleton-table-cell"><div class="skeleton w-20 h-5 rounded"></div></td>
                        <td class="skeleton-table-cell"><div class="skeleton w-16 h-5 rounded"></div></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>