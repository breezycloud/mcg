<div class="mb-8">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Our Products</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        @foreach (Product product in Enum.GetValues(typeof(Product)))
        {
            <ProductInfoCard Product="product" OnLearnMore="() => OnProductSelected.InvokeAsync(product)" />
        }
    </div>
</div>

@code {
    [Parameter]
    public EventCallback<Product> OnProductSelected { get; set; }
}