            </svg>
        </button> *@
    </div>
</div>


@code {
    [Parameter]
    public Product Product { get; set; }

    [Parameter]
    public EventCallback OnLearnMore { get; set; }

    private string GetProductIconClass(Product product)
    {
        return product switch
        {
            Product.CNG => "bg-blue-100 text-blue-600 dark:bg-blue-900 dark:text-blue-300",
            Product.PMS => "bg-green-100 text-green-600 dark:bg-green-900 dark:text-green-300",
            Product.ATK => "bg-yellow-100 text-yellow-600 dark:bg-yellow-900 dark:text-yellow-300",
            Product.LPG => "bg-red-100 text-red-600 dark:bg-red-900 dark:text-red-300",
            _ => "bg-gray-100 text-gray-600 dark:bg-gray-900 dark:text-gray-300"
        };
    }

    private string GetProductIcon(Product product)
    {
        return product switch
        {
            Product.CNG => "⛽",
            Product.PMS => "🛢️",
            Product.ATK => "✈️",
            Product.LPG => "🔥",
            _ => "❓"
        };
    }

    private string GetProductFullName(Product product)
    {
        return product switch
        {
            Product.CNG => "Compressed Natural Gas",
            Product.PMS => "Premium Motor Spirit",
            Product.ATK => "Aviation Turbine Kerosene",
            Product.LPG => "Liquefied Petroleum Gas",
            Product.AGO => "Automotive Gas Oil",
            _ => product.ToString()
        };
    }

    private string GetProductDescription(Product product)
    {
        return product switch
        {
            Product.CNG => "Clean burning alternative fuel for vehicles with lower emissions.",
            Product.PMS => "High-octane petroleum product used as fuel in internal combustion engines.",
            Product.ATK => "Specialized type of kerosene used to power jet engines.",
            Product.LPG => "Portable, clean and efficient energy source used for heating and cooking.",
            Product.AGO => "Automotive Gas Oil, commonly known as diesel, used in diesel engines for vehicles and machinery.",
            _ => "Petroleum product"
        };
    }

    private string GetProductBadgeClass(Product product)
    {
        return product switch
        {
            Product.CNG => "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300",
            Product.PMS => "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300",
            Product.ATK => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300",
            Product.LPG => "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300",
            Product.AGO => "bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-300",
            _ => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300"
        };
    }
}