<div class="max-w-full p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <div class="flex items-center mb-4">
        <div class="@GetProductIconClass(Product) w-10 h-10 rounded-full flex items-center justify-center mr-3">
            @GetProductIcon(Product)
        </div>
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
            @GetProductFullName(Product)
        </h3>
    </div>
    
    <p class="mb-3 text-gray-700 dark:text-gray-400">
        @GetProductDescription(Product)
    </p>
    
    <div class="flex justify-between items-center">
        <span class="@GetProductBadgeClass(Product) text-xs font-medium px-2.5 py-0.5 rounded-full">
            @Product
        </span>
